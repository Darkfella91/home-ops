{
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^\\.devcontainer/Dockerfile$"],
      "matchStrings": [
        "# renovate: depName=(?<depName>\\S+)\\s*\\nARG (?<argName>\\S+)=v(?<currentValue>\\S+)(\\s|$)"
      ],
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver",
      "depNameTemplate": "{{depName}}",
      "extractVersionTemplate": "v{{currentValue}}",
      "packageNameTemplate": "{{depName}}"
    }
  ]
}
