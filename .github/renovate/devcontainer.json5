{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "regex",
      "description": "Fetch latest kubectl version from Kubernetes stable URL",
      "fileMatch": [
        "^\\.devcontainer/Dockerfile$"
      ],
      "matchStrings": [
        "# renovate: depName=kubectl\\s*\\nARG KUBECTL_VERSION=(?<currentVersion>\\S+)"
      ],
      "datasourceTemplate": "url",
      "urlTemplate": "https://dl.k8s.io/release/stable.txt",
      "versioningTemplate": "semver",
      "depNameTemplate": "kubectl",
      "extractVersionTemplate": "{{currentVersion}}",
      "packageNameTemplate": "kubectl",
      "lookupNameTemplate": "kubectl"
    },
    {
      "customType": "regex",
      "description": ["Process ARG versions in Dockerfile"],
      "fileMatch": ["^\\.devcontainer/Dockerfile$"],
      "matchStrings": [
        "# renovate: depName=(?<depName>\\S+)\\s*\\nARG (?<argName>\\S+)=v(?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver",
      "depNameTemplate": "{{depName}}",
      "packageNameTemplate": "{{depName}}",
      "lookupNameTemplate": "{{depName}}"
    }
  ],
  "packageRules": [
    {
      "packageNames": ["kubectl"],
      "excludePackageNames": ["kubectl"]
    }
  ]
}
