{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customDatasources": {
    "github-releases": {
      "defaultRegistryUrlTemplate": "https://api.github.com/repos/{{packageName}}/releases/latest",
      "format": "json",
      "transformTemplates": [
        "{\"version\": $string(tag_name)}"
      ]
    }
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": ["Process CLI tool versions in Dockerfile"],
      "fileMatch": ["(^|/)(\\.devcontainer/)?Dockerfile$"],
      "matchStrings": [
        "ARG FLUX_VERSION=(?<fluxVersion>v\\d+\\.\\d+\\.\\d+)",
        "ARG SOPS_VERSION=(?<sopsVersion>v\\d+\\.\\d+\\.\\d+)",
        "ARG KUBECTL_VERSION=(?<kubectlVersion>v\\d+\\.\\d+\\.\\d+)",
        "ARG HELMFILE_VERSION=(?<helmfileVersion>v\\d+\\.\\d+\\.\\d+)"
      ],
      "autoReplaceStringTemplate": [
        "ARG FLUX_VERSION={{{newFluxVersion}}}",
        "ARG SOPS_VERSION={{{newSopsVersion}}}",
        "ARG KUBECTL_VERSION={{{newKubectlVersion}}}",
        "ARG HELMFILE_VERSION={{{newHelmfileVersion}}}"
      ],
      "datasourceTemplate": "custom.github-releases",
      "versioningTemplate": "regex:^(v\\d+\\.\\d+\\.\\d+)$"
    }
  ],
  "packageRules": [
    {
      "addLabels": ["renovate/cli-tools"],
      "automerge": true,
      "automergeType": "branch",
      "matchDatasources": ["custom.github-releases"],
      "matchUpdateTypes": ["minor", "patch"],
      "semanticCommitType": "chore",
      "semanticCommitScope": "cli-tools",
      "commitMessageTopic": "update CLI tool version for {{depName}}",
      "commitMessageExtra": "( {{currentVersion}} â†’ {{newVersion}} )"
    }
  ]
}
