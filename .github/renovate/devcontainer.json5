{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "regex",
      "description": ["Process ARG versions in Dockerfile"],
      "fileMatch": ["^\\.devcontainer/Dockerfile$"],
      "matchStrings": [
        "# renovate: depName=(?<depName>\\S+)\\s*\\nARG (?<argName>\\S+)=v(?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "github-tags",
      "versioningTemplate": "semver",
      "depNameTemplate": "{{depName}}",
      "extractVersionTemplate": "v{{currentValue}}",
      "packageNameTemplate": "{{depName}}",
      "lookupNameTemplate": "{{depName}}"
    }
  ]
}
